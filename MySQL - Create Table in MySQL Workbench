# this is to create 'accounts' table (used in main.py) in mysql so that the sandbox can store user data.  
USE MyUsers;
CREATE TABLE IF NOT EXISTS `accounts` (
	`id` int(11) NOT NULL AUTO_INCREMENT,
  	`username` varchar(50) NOT NULL,
  	`password` varchar(255) NOT NULL,
  	`email` varchar(100) NOT NULL,
    PRIMARY KEY (`id`)
);

# The below is to create tables to store links in mysql 
USE mkt_indicators;
CREATE TABLE IF NOT EXISTS `indicators` (
	`id` int(20) NOT NULL AUTO_INCREMENT,
  	`Country` varchar(50) NOT NULL,
  	`MarketIndicators` varchar(255) NOT NULL,
  	`url` varchar(100) NOT NULL,
    `category` varchar(100) NOT NULL,
    PRIMARY KEY (`id`)
);

CREATE TABLE IF NOT EXISTS `data`(
	`id` int(20) NOT NULL AUTO_INCREMENT,
  	`MarketIndicators` int(20) NOT NULL REFERENCES indicators(id),
  	`date` varchar(255),
    `Price` varchar(255), 
    PRIMARY KEY (`id`)
  );  
